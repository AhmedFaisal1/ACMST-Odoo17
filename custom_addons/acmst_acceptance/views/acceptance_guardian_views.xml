<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Compact tree view to ensure no 'Wizard' column ever shows -->
    <record id="view_acceptance_guardian_tree" model="ir.ui.view">
        <field name="name">acmst.acceptance.guardian.tree</field>
        <field name="model">acmst.acceptance.guardian</field>
        <field name="arch" type="xml">
            <tree string="Guardians" decoration-success="is_default">
                <field name="name"/>
                <field name="relation"/>
                <field name="phone"/>
                <field name="address"/>
                <field name="is_default" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    <record id="view_acceptance_guardian_form" model="ir.ui.view">
        <field name="name">acmst.acceptance.guardian.form</field>
        <field name="model">acmst.acceptance.guardian</field>
        <field name="arch" type="xml">
            <form string="Guardian">
                <sheet>
                    <group>
                        <field name="wizard_id" invisible="1"/>
                        <field name="name" required="1"/>
                        <field name="relation"/>
                        <field name="phone"/>
                        <field name="address"/>
                    </group>
                </sheet>
                <footer>
                    <!-- No attrs/states in v17 -->
                    <button string="Save &amp; Set Default" type="object" name="action_set_default" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Guardians -->
    <record id="action_open_acceptance_guardian" model="ir.actions.act_window">
        <field name="name">Guardians</field>
        <field name="res_model">acmst.acceptance.guardian</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_acceptance_guardian_tree"/>
        <field name="target">current</field>
    </record>
</odoo>
