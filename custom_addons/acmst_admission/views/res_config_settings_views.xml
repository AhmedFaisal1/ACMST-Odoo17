<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="res_config_settings_view_form_inherit_acmst" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.acmst</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="priority" eval="50"/>
      <field name="arch" type="xml">
        <xpath expr="//form" position="inside">
          <app data-string="Admissions" string="Admissions" name="acmst_admissions">
            <block title="Brevo">
              <setting>
                <field name="brevo_api_key" password="True"/>
                <field name="brevo_sender"/>
                <field name="brevo_template"/>
                <field name="brevo_language"/>
                <field name="brevo_webhook_secret"/>
              </setting>
            </block>
            <block title="Security">
              <setting>
                <field name="recaptcha_site_key"/>
                <field name="recaptcha_secret_key" password="True"/>
                <field name="blacklist_phones" placeholder="+9665xxxxxxxx, +2010xxxxxxx"/>
              </setting>
            </block>
          </app>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
