<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_admissions_year_tree" model="ir.ui.view">
            <field name="name">admissions.year.tree</field>
            <field name="model">admissions.year</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="label"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="is_current"/>
                </tree>
            </field>
        </record>

        <record id="view_admissions_year_form" model="ir.ui.view">
            <field name="name">admissions.year.form</field>
            <field name="model">admissions.year</field>
            <field name="arch" type="xml">
                <form string="Academic Year">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="label"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="is_current"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

