<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Top-level menu -->
        <menuitem id="menu_admissions_root" name="Admissions" sequence="50"/>

        <!-- Actions -->
        <record id="action_admissions_candidates" model="ir.actions.act_window">
            <field name="name">Candidates</field>
            <field name="res_model">admissions.candidate</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <record id="action_admissions_programs" model="ir.actions.act_window">
            <field name="name">Programs</field>
            <field name="res_model">admissions.program</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_admissions_years" model="ir.actions.act_window">
            <field name="name">Academic Years</field>
            <field name="res_model">admissions.year</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_admissions_settings" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">admissions.settings</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_latest": 1}</field>
        </record>

        <!-- Submenus -->
        <menuitem id="menu_admissions_candidates" name="Candidates"
                  parent="menu_admissions_root" action="action_admissions_candidates" sequence="5"
                  groups="acmst_admission.group_admissions_admin,acmst_admission.group_admissions_officer,base.group_system"/>

        <menuitem id="menu_admissions_programs" name="Programs"
                  parent="menu_admissions_root" action="action_admissions_programs" sequence="20"
                  groups="acmst_admission.group_admissions_admin,acmst_admission.group_admissions_officer,base.group_system"/>

        <menuitem id="menu_admissions_years" name="Academic Years"
                  parent="menu_admissions_root" action="action_admissions_years" sequence="30"
                  groups="acmst_admission.group_admissions_admin,acmst_admission.group_admissions_officer,base.group_system"/>

        <menuitem id="menu_admissions_settings" name="Settings"
                  parent="menu_admissions_root" action="action_admissions_settings" sequence="90"
                  groups="acmst_admission.group_admissions_admin,base.group_system"/>
    </data>
</odoo>
