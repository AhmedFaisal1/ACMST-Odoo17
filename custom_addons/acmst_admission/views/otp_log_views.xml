<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_admissions_otp_log_tree" model="ir.ui.view">
      <field name="name">admissions.otp.log.tree</field>
      <field name="model">admissions.otp.log</field>
      <field name="arch" type="xml">
        <tree>
          <field name="create_date"/>
          <field name="provider"/>
          <field name="phone"/>
          <field name="event"/>
          <field name="status"/>
          <field name="message"/>
        </tree>
      </field>
    </record>
    <record id="view_admissions_otp_log_form" model="ir.ui.view">
      <field name="name">admissions.otp.log.form</field>
      <field name="model">admissions.otp.log</field>
      <field name="arch" type="xml">
        <form string="OTP Log">
          <sheet>
            <group>
              <field name="provider"/>
              <field name="phone"/>
              <field name="event"/>
              <field name="status"/>
              <field name="message"/>
            </group>
            <group>
              <field name="payload" widget="json"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="action_admissions_otp_logs" model="ir.actions.act_window">
      <field name="name">OTP Logs</field>
      <field name="res_model">admissions.otp.log</field>
      <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_admissions_otp_logs" name="OTP Logs"
              parent="acmst_admission.menu_admissions_root" action="action_admissions_otp_logs" sequence="95"
              groups="acmst_admission.group_admissions_admin,base.group_system"/>
  </data>
</odoo>
