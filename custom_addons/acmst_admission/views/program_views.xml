<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_admissions_program_tree" model="ir.ui.view">
            <field name="name">admissions.program.tree</field>
            <field name="model">admissions.program</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name_ar"/>
                    <field name="name_en"/>
                </tree>
            </field>
        </record>

        <record id="view_admissions_program_form" model="ir.ui.view">
            <field name="name">admissions.program.form</field>
            <field name="model">admissions.program</field>
            <field name="arch" type="xml">
                <form string="Program">
                    <sheet>
                        <group>
                            <field name="code"/>
                            <field name="name_ar"/>
                            <field name="name_en"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>

