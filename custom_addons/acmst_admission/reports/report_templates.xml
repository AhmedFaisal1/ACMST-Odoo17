<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="report_admission_form">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <div class="page o_report_rtl">
            <div class="o_report_brand_header">
              <div class="o_report_brand_title">نموذج القبول / Admission Form</div>
              <div class="o_report_brand_logo">
                <img t-att-src="'/web/image/res.company/%d/logo' % (env.company.id,)" style="height:40px;"/>
              </div>
            </div>
            <h3 style="text-align:center; margin-top: 0;">بيانات الطالب / Candidate Details</h3>
            <table style="width:100%; font-size: 12px;">
              <tr>
                <td style="width:25%;">الرقم الجامعي</td>
                <td style="width:75%;"><t t-esc="o.combined_university_id"/></td>
              </tr>
              <tr>
                <td>الاسم (ع)</td>
                <td><t t-esc="' '.join(filter(None, [o.first_ar, o.second_ar, o.third_ar, o.fourth_ar]))"/></td>
              </tr>
              <tr>
                <td>Name (EN)</td>
                <td><t t-esc="' '.join(filter(None, [o.first_en, o.second_en, o.third_en, o.fourth_en]))"/></td>
              </tr>
              <tr>
                <td>البرنامج</td>
                <td><t t-esc="o.program_id.code"/></td>
              </tr>
              <tr>
                <td>السنة الأكاديمية</td>
                <td><t t-esc="o.academic_year_id.code"/></td>
              </tr>
              <tr>
                <td>تاريخ الميلاد</td>
                <td><t t-esc="o.dob"/></td>
              </tr>
              <tr>
                <td>الهوية الوطنية</td>
                <td><t t-esc="o.national_id"/></td>
              </tr>
            </table>
            <div style="margin-top:24px; display:flex; gap:24px;">
              <div style="flex:1;">
                <div>Signature</div>
                <div style="height:60px; border:1px solid #000;"></div>
              </div>
              <div style="flex:1;">
                <div>Stamp</div>
                <div style="height:60px; border:1px solid #000;"></div>
              </div>
            </div>
          </div>
        </t>
      </t>
    </template>

    <template id="report_embassy_style">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <div class="page o_report_rtl">
            <div class="o_report_brand_header">
              <div class="o_report_brand_title">نموذج للسفارة / Embassy-style Form</div>
              <div class="o_report_brand_logo">
                <img t-att-src="'/web/image/res.company/%d/logo' % (env.company.id,)" style="height:40px;"/>
              </div>
            </div>
            <table style="width:100%; border-collapse: collapse; font-size: 12px;">
              <tr>
                <td style="width:30%; border:1px solid #000; padding:6px;">الرقم الجامعي / Univ. ID</td>
                <td style="width:70%; border:1px solid #000; padding:6px;"><t t-esc="o.combined_university_id"/></td>
              </tr>
              <tr>
                <td style="border:1px solid #000; padding:6px;">الاسم (ع)</td>
                <td style="border:1px solid #000; padding:6px;"><t t-esc="' '.join(filter(None, [o.first_ar, o.second_ar, o.third_ar, o.fourth_ar]))"/></td>
              </tr>
              <tr>
                <td style="border:1px solid #000; padding:6px;">Name (EN)</td>
                <td style="border:1px solid #000; padding:6px;"><t t-esc="' '.join(filter(None, [o.first_en, o.second_en, o.third_en, o.fourth_en]))"/></td>
              </tr>
              <tr>
                <td style="border:1px solid #000; padding:6px;">البرنامج / Program</td>
                <td style="border:1px solid #000; padding:6px;"><t t-esc="o.program_id.code"/></td>
              </tr>
              <tr>
                <td style="border:1px solid #000; padding:6px;">السنة الأكاديمية / Year</td>
                <td style="border:1px solid #000; padding:6px;"><t t-esc="o.academic_year_id.code"/></td>
              </tr>
              <tr>
                <td style="border:1px solid #000; padding:6px;">تاريخ الميلاد / DOB</td>
                <td style="border:1px solid #000; padding:6px;"><t t-esc="o.dob"/></td>
              </tr>
              <tr>
                <td style="border:1px solid #000; padding:6px;">الهوية الوطنية / National ID</td>
                <td style="border:1px solid #000; padding:6px;"><t t-esc="o.national_id"/></td>
              </tr>
            </table>
            <div style="margin-top:24px; display:flex; gap:24px;">
              <div style="flex:1;">
                <div>Signature</div>
                <div style="height:80px; border:1px solid #000;"></div>
              </div>
              <div style="flex:1;">
                <div>Stamp</div>
                <div style="height:80px; border:1px solid #000;"></div>
              </div>
            </div>
          </div>
        </t>
      </t>
    </template>
  </data>
</odoo>
