<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_admissions_admin" model="res.groups">
            <field name="name">Admissions Admin</field>
            <field name="category_id" ref="base.module_category_website"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_admissions_officer" model="res.groups">
            <field name="name">Admissions Officer</field>
            <field name="category_id" ref="base.module_category_website"/>
        </record>
        <record id="group_admissions_portal" model="res.groups">
            <field name="name">Admissions Portal</field>
            <field name="category_id" ref="base.module_category_website"/>
        </record>

        <!-- Record rules: portal users can only access their own candidate record -->
        <record id="rule_admissions_candidate_portal_self" model="ir.rule">
            <field name="name">Admissions Candidate: Portal Self Access</field>
            <field name="model_id" ref="model_admissions_candidate"/>
            <field name="domain_force">[("partner_id","=",user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_admissions_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Deny portal visibility on Programs/Years (safety) -->
        <record id="rule_admissions_program_portal_deny" model="ir.rule">
            <field name="name">Admissions Program: Portal Deny</field>
            <field name="model_id" ref="model_admissions_program"/>
            <field name="domain_force">[("id","=",-1)]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_admissions_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record id="rule_admissions_year_portal_deny" model="ir.rule">
            <field name="name">Admissions Year: Portal Deny</field>
            <field name="model_id" ref="model_admissions_year"/>
            <field name="domain_force">[("id","=",-1)]</field>
            <field name="groups" eval="[(4, ref('acmst_admission.group_admissions_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
