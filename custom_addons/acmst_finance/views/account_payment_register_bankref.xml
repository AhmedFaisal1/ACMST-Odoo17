<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_register_form_inherit_acmst_bankref" model="ir.ui.view">
        <field name="name">account.payment.register.form.acmst.bankref</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='payment_date']" position="after">
                <field name="bank_reference" placeholder="e.g. 20104292"/>
            </xpath>
        </field>
    </record>
</odoo>
